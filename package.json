{
  "name": "node-aries-controller",
  "version": "1.0.0",
  "description": "An aries controller app for connecting to the aries-cloudagent-python app.",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register **/**/*.test.ts || true",
    "test-watch": "nodemon --exec npm test",
    "lint": "tslint --project tsconfig.json --format stylish",
    "build": "tsc",
    "serve": "ts-node src/demo.ts",
    "start:testsuite": "nodemon --exec npm run testsuite",
    "testsuite": "node --require ts-node/register src/server.ts",
    "start": "nodemon",
    "data:relationships": "nodemon --exec ts-node src/data-gen.ts",
    "debug": "node --inspect-brk --require ts-node/register src/server.ts",
    "start:test-suite": "mocha --reporter=xunit --reporter-options output=results.xml -r ts-node/register **/**/*.test.ts || true",
    "build:database": "npm install pouchdb-server --global",
    "start:db": "pouchdb-server --port 5984"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/dotenv": "^6.1.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-find": "^6.3.4",
    "@types/supertest": "^2.0.8",
    "@types/superagent": "^4.1.3",
    "@types/uuid": "^3.4.5",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "dotenv": "^8.1.0",
    "http-status-codes": "^1.3.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa2-cors": "^2.0.6",
    "module-alias": "^2.2.1",
    "pouchdb": "^7.1.1",
    "pouchdb-find": "^7.1.1",
    "pouchdb-server": "^4.2.0",
    "rxjs": "^6.5.3",
    "superagent": "^5.1.0",
    "uuid": "^3.3.3"
  },
  "_moduleAliases": {
    "@agent": "dist/app/agent",
    "@client": "dist/app/client",
    "@test-suite": "dist/app/test-suite"
  }
}
